{
  "manifest_version": 3,
  "name": "DeepSeek 翻译助手",
  "version": "1.0",
  "description": "使用 DeepSeek API 进行翻译和对话的 Chrome 插件",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "30": "images/icon30.png",
      "60": "images/icon60.png",
      "90": "images/icon90.png"
    }
  },
  "icons": {
    "30": "images/icon30.png",
    "60": "images/icon60.png",
    "90": "images/icon90.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "打开/关闭侧边栏"
    },
    "translate-selection": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "mac": "Alt+Shift+T"
      },
      "description": "翻译选中文本"
    }
  },
  "web_accessible_resources": [{
    "resources": [
      "sidebar.html",
      "sidebar.js",
      "images/*"
    ],
    "matches": ["<all_urls>"]
  }]
} 